---
layout: plain
---
<rss xmlns:content="http://purl.org/rss/1.0/modules/content/" xmlns:itunes="http://www.itunes.com/DTDs/Podcast-1.0.dtd" version="2.0">
  <channel>
    <title>{{ site.name }}</title>
    <description>{{ site.description }}</description>
    <link>{{ site.url }}</link>
    <pubDate>{{ site.time | date_to_xmlschema }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_xmlschema }}</lastBuildDate>
    <itunes:subtitle>{{ site.description }}</itunes:subtitle>
    <itunes:author>AgileRadio</itunes:author>
    <itunes:summary>{{ site.description }}</itunes:summary>
    <itunes:owner>
      <itunes:name>{{ site.author.name }}</itunes:name>
      <itunes:email>{{ site.author.email }}</itunes:email>
    </itunes:owner>
    <itunes:image href="{{ site.author.image }}"/>
    <itunes:category text="Technology">
      <itunes:category text="Software"/>
      <itunes:category text="Agile"/>
    </itunes:category>

    {% assign posts = site.posts | where_exp: "post", "post.draft != true" | sort: "date" | reverse %}
    {% for post in posts limit: 100 %}
    <item>
      <title>{{ post.title }}</title>
      <description><![CDATA[
{{ post.excerpt }}
      ]]></description>
      <pubDate>{{ post.date | date_to_xmlschema }}</pubDate>
      <link>{{ post.url | absolute_url }}</link>
      <guid isPermaLink="true">{{ post.url | absolute_url }}</guid>
      <category>Radio</category>
      {% if post.audio %}
      <enclosure url="http://agileradio-assets1.s3-website-us-west-1.amazonaws.com/mp3/ar_100.mp3" length="14215773" type="audio/mpeg"/>
      {% endif %}
    </item>
    {% endfor %}
  </channel>
</rss>
